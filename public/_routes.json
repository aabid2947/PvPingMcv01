{
  "version": 1,
  "include": [
    "/*"
  ],
  "exclude": [
    "/assets/*",
    "/images/*",
    "/favicon.ico",
    "/robots.txt"
  ],
  "routes": [
    {
      "src": "/content/blog/.*",
      "dest": "/blog"
    },
    {
      "src": "/blog",
      "dest": "/index.html"
    },
    {
      "src": "/blog/:slug",
      "dest": "/index.html"
    },
    {
      "src": "/store",
      "dest": "/index.html"
    },
    {
      "src": "/about",
      "dest": "/index.html"
    },
    {
      "src": "/contact",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 